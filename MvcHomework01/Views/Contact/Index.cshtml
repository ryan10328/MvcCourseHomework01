@using MvcHomework01.Models
@model ContactViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm("Index", "Contact", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="well">
        <div class="row">
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.Label("聯絡人姓名", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.ContactViewModelSearch.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("聯絡人手機", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.ContactViewModelSearch.Mobile, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("客戶", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(x => x.ContactViewModelSearch.CustomerId, (IEnumerable<SelectListItem>)Model.CustomerList, "---請選擇---", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <input type="submit" value="送出" class="btn btn-primary" />
                    </div>

                </div>
            </div>
        </div>
    </div>
}
<p>
    @Html.ActionLink("新增客戶聯絡人", "Create") | @Html.ActionLink("匯出客戶聯絡人", "ExportExcel")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.客戶聯絡人s.FirstOrDefault().職稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶聯絡人s.FirstOrDefault().姓名)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶聯絡人s.FirstOrDefault().Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶聯絡人s.FirstOrDefault().手機)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶聯絡人s.FirstOrDefault().電話)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶聯絡人s.FirstOrDefault().客戶資料.客戶名稱)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.客戶聯絡人s)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.職稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.姓名)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.手機)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
            </td>
            <td>
                @Html.ActionLink("編輯", "Edit", new { id = item.Id }) |
                @Html.ActionLink("詳細頁面", "Details", new { id = item.Id }) |
                @Html.ActionLink("刪除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
