@model IEnumerable<MvcHomework01.Models.VWCustomerInformation>

@{
    ViewBag.Title = "Index";
}

@section Header{
    <h1 class="page-header">
        資料庫檢視
    </h1>
}

@section BreadCrumbs{
    <ol class="breadcrumb">
        <li class="active">
            @Html.ActionLink("Home", "Index", "Home", null, null)
        </li>
        <li>
            資料庫檢視
        </li>
    </ol>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BankCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactCount)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BankCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactCount)
            </td>
        </tr>
    }

</table>
